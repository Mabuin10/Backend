<h1>Lista de Productos</h1>
<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row justify-content-center mb-3">
      {{#if products}}
        {{#each products}}
          <div class="col-md-12 col-xl-10 margin">
            <div class="card shadow-0 border rounded-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                    <div
                      class="bg-image hover-zoom ripple rounded ripple-surface"
                    >
                      <img src={{this.thumbnails}} class="img-thumbnail rounded" />
                      <a href="#!">
                        <div class="hover-overlay">
                          <div
                            class="mask"
                            style="background-color: rgba(253, 253, 253, 0.15);"
                          ></div>
                        </div>
                      </a>
                    </div>
                  </div>
                  <div class="col-md-6 col-lg-6 col-xl-6">
                    <h5>{{title}}</h5>
                    <div class="d-flex flex-row">
                      <div class="text-danger mb-1 me-2">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                      </div>
                      <span>{{code}}</span>
                    </div>
                    <div class="mt-1 mb-0 text-muted small">
                        Categoria: <span>{{category}}<br /></span>
                    </div>
                    <div class="mb-2 text-muted small">
                      <span class="text-primary"> {{description}} </span>
                    </div>
                    <p class="text-truncate mb-4 mb-md-0">
                      Stock: {{stock}}
                    </p>
                  </div>
                  <div
                    class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start"
                  >
                    <div class="d-flex flex-row align-items-center mb-1">
                      <h4 class="mb-1 me-1">${{price}}</h4>
                    </div>
                    <h6 class="text-success">Envio gratis</h6>
                    <div class="d-flex flex-column mt-4">
                      <button type="button" class="btn btn-outline-primary btn-sm" id="{{_id}}" onclick="addToCart('{{_id}}')">addToCart</button>
                      <button type="button" class="btn btn-outline-primary btn-sm mt-2" id="{{prducts}}">details</button>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        {{/each}}
      {{else}}
        <h1>{{message}}</h1>
        <h3>{{productos}}</h3>
      {{/if}}
    </div>
  </div>
</section>
<script src="/js/products.js"></script>