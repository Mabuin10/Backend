<div>
    <h1 class="title">Lista de productos.</h1>
    <div class="list">
        <ul>
            {{#each products}}
            <li>
                <div class="info">
                    <h2>
                        {{prop this 'title'}}
                    </h2>
                    <div class="description-category">
                        <p><span>Description:</span> {{prop this 'description'}}</p>
                        <p><span>Category:</span> {{prop this 'category'}}</p>
                    </div>
                    <div class="price-stock">
                        <p><span>Price:</span> ${{prop this 'price'}}</p>
                        <p><span>Stock:</span> {{prop this 'stock'}}</p>
                    </div>
                    <button class="btn btn-outline-primary btn-sm mt-2" type="button"
                        onclick="addToCart('{{prop this '_id'}}')">
                        Add to cart
                    </button>
                </div>
                <div class="thumbnails">
                    {{#each (prop this 'thumbnails')}}
                    <img src="{{this}}" alt="{{prop ../this 'title'}}">
                    {{/each}}
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<script src="./js/script.js"></script>
<script src="./js/products.js"></script>